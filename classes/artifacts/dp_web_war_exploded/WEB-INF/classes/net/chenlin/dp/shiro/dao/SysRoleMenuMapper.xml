<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.chenlin.dp.shiro.dao.SysRoleMenuMapper">
	
	<insert id="save">
		<selectKey keyProperty="id" resultType="long" order="BEFORE">
			select pms_sys_role_menu_seq.nextval from dual
		</selectKey>
		INSERT INTO pms_sys_role_menu (
			id,
			role_id,
			menu_id
		)
		VALUES
		<foreach collection="menuIdList" item="item" index="index" separator="," >
		(
			#{id},
			#{roleId}, 
			#{item} 
		)
		</foreach>
	</insert>
	
	<select id="listMenuId" resultType="long">
		SELECT
			menu_id
		FROM
			pms_sys_role_menu
		WHERE
			role_id = #{id}
	</select>
	
	<delete id="batchRemoveByMenuId">
		DELETE
		FROM
			pms_sys_role_menu
		WHERE
			menu_id IN 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<delete id="batchRemoveByRoleId">
		DELETE
		FROM
			pms_sys_role_menu
		WHERE
			role_id IN 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<delete id="remove">
		DELETE
		FROM 
			pms_sys_role_menu
		WHERE 
			role_id = #{value}
	</delete>

</mapper>